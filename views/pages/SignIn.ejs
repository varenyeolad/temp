                <div style="margin-left: 10%;margin-right: 10%">
                    <h2>Sign In</h2>
                    <% if (messages.error) { %>
                        <%= messages.error %>
                    <% } %>
                    <p>Please fill in this form to Log In.</p>

                    <hr style="margin-left:0; width:100%; height:3px; border-width:0; color:grey; background-color:grey"><br>

                    <label for="email"><b>Email</b></label>
                    <input type="email" placeholder="Enter Email" name="email" id="email"  required  style=" border:none; width: 50%;"><br><br>

                    <label for="psw-repeat"><b>Password</b></label>
                    <input type="password" placeholder="Password" name="password" id="psw-repeat"  style=" border:none;width: 50%;" required> <br><br>


                    <hr style="margin-left:0; margin-top:30px; width:100%; height:3px; border-width:0; color:grey; background-color:grey">

                    <button type="submit" class="btn btn-outline-secondary btn-lg btn-block">Log In</button>
                    <div class="containerSignIn">
